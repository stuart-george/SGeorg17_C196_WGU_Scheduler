<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wgu.sgeor17.wguscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.mentor.MentorDetailActivity"
            android:label="@string/title_activity_mentor_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.assessment.AssessmentDetailActivity"
            android:label="@string/title_activity_assessment_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.assessment.AssessmentActivity"
            android:label="@string/title_activity_assessment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.note.NoteDetailActivity"
            android:label="@string/title_activity_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.course.CourseDetailActivity"
            android:label="@string/title_activity_course_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.course.CourseActivity"
            android:label="@string/title_activity_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.term.TermDetailActivity"
            android:label="@string/title_activity_term_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.term.TermActivity"
            android:label="@string/title_activity_term"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>